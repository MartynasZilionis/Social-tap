<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="social_tapX.Comments">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image x:Name="Backround"
                   Source=""
                   IsVisible="true"
                   Grid.ColumnSpan="14"
                   Grid.RowSpan="6"
                   Opacity="0.25"
                   />

            <Button x:Name="OK"
                    Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="12"
                    Text="OK"
                    TextColor="#FFF3E0"
                    Font="Bold, Italic, Large"
                    BackgroundColor="#EF6C00"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    IsVisible="true"
                    IsEnabled="true"
                    Opacity="1"   
                    Pressed="OK_Pressed"
                />

            <Entry x:Name="BarName"
                   Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="12"
                   Placeholder="Bar Name Goes Here"
                   PlaceholderColor="#E65100"
                   Text=""
                   Opacity="1"
                   IsVisible="true"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   FontSize="Medium"
                   />

            <Editor x:Name="Comment"
                    Text=""
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="12"
                    FontSize="Medium"  
                    Focused="Comment_Focused"
                    />
            
            <Label x:Name="ThankYou"
                   Text=""
                   TextColor="#E65100"
                   Opacity="0"
                   IsVisible="false"
                   Grid.Row="2"
                   Grid.Column="1"
                   Grid.ColumnSpan="12"
                   Font="Bold, Italic, Large"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   />
            <!--#region Rating In Stars-->
            <Button x:Name="Star1_B"
                    Opacity="0"
                    Pressed="Star1_B_Pressed"

                    Grid.Row="3"
                    Grid.Column="1"
                    IsEnabled="True"
                />
            <Image x:Name="Star1_I"
                   Source=""

                   Grid.Row="3"
                   Grid.Column="1"
                   IsEnabled="False"
                />

            <Button x:Name="Star2_B"
                    Opacity="0"
                    Pressed="Star2_B_Pressed"

                    Grid.Row="3"
                    Grid.Column="2"
                    IsEnabled="True"
                />
